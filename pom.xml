<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>pl.execon.common</groupId>
    <artifactId>fsp</artifactId>
    <packaging>pom</packaging>
    <version>0.1.0</version>
    <modules>
        <module>fsp-model</module>
        <module>fsp-adapters</module>
    </modules>

    <properties>
        <java.version>17</java.version>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!--        MODULES VERSIONS  -->
        <fsp-model.version>0.1.0</fsp-model.version>
        <fsp-mongo.version>0.1.0</fsp-mongo.version>
        <!--        LIBRARIES VERSIONS  -->
        <lombok.version>1.18.24</lombok.version>
        <spring.data.common.version>2.6.3</spring.data.common.version>
        <!--        TEST LIBRARIES VERSIONS  -->
        <junit.version>5.8.2</junit.version>
        <mockito.version>4.5.1</mockito.version>
        <spring-boot-test.version>2.6.7</spring-boot-test.version>
        <h2.version>2.1.210</h2.version>
        <commons.lang.version>3.12.0</commons.lang.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!--        MODULES  -->
            <dependency>
                <groupId>pl.execon.common</groupId>
                <artifactId>fsp-model</artifactId>
                <version>${fsp-model.version}</version>
            </dependency>
            <dependency>
                <groupId>pl.execon.common</groupId>
                <artifactId>fsp-mongo</artifactId>
                <version>${fsp-mongo.version}</version>
            </dependency>

            <!--        LIBRARIES  -->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.data</groupId>
                <artifactId>spring-data-commons</artifactId>
                <version>${spring.data.common.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${commons.lang.version}</version>
            </dependency>
            <!--        TEST LIBRARIES  -->
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter</artifactId>
                <version>${junit.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-test</artifactId>
                <version>${spring-boot-test.version}</version>
            </dependency>
            <dependency>
                <groupId>com.h2database</groupId>
                <artifactId>h2</artifactId>
                <version>${h2.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
